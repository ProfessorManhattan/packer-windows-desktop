{
  "variables": {
    "box_basename": "Base-Windows-Desktop",
    "build_directory": "../../builds",
    "communicator": "winrm",
    "compression_level": "9",
    "cpus": "2",
    "description": "Windows 10 Desktop",
    "disk_size": "50000",
    "guest_additions_mode": "attach",
    "guest_additions_url": "",
    "headless": "true",
    "hyperv_switch": "bento",
    "iso_checksum": "489ebee676e26cdb81377b0e6385c001a22589b8",
    "iso_url": "https://software-download.microsoft.com/download/pr/18363.418.191007-0143.19h2_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "iso_version": "10.0.18363",
    "memory": "4096",
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
    "shutdown_timeout": "15m",
    "vagrantup_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "vagrantup_user": "ProfessorManhattan",
    "virtio_file": "virtio-win.iso",
    "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}",
    "winrm_password": "vagrant",
    "winrm_timeout": "12h",
    "winrm_username": "vagrant"
  },
  "builders": [
    {
      "type": "hyperv-iso",
      "communicator": "{{ user `communicator` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "{{ template_dir }}/Autounattend.xml",
        "{{ template_dir }}/scripts/base_setup.ps1"
      ],
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "shutdown_timeout": "{{ user `shutdown_timeout` }}",
      "switch_name": "{{ user `hyperv_switch` }}",
      "vm_name": "{{ user `vm_name` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "{{ user `winrm_timeout` }}",
      "winrm_username": "{{ user `winrm_username` }}"
    },
    {
      "type": "parallels-iso",
      "communicator": "{{ user `communicator` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "{{ template_dir }}/Autounattend.xml",
        "{{ template_dir }}/scripts/base_setup.ps1"
      ],
      "guest_os_type": "win-10",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "parallels_tools_flavor": "win",
      "parallels_tools_mode": "attach",
      "prlctl": [
        [
          "set",
          "{{ .Name }}",
          "--efi-boot",
          "off"
        ]
      ],
      "prlctl_version_file": ".prlctl_version",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "shutdown_timeout": "{{ user `shutdown_timeout` }}",
      "vm_name": "{{ user `vm_name` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "{{ user `winrm_timeout` }}",
      "winrm_username": "{{ user `winrm_username` }}"
    },
    {
      "type": "qemu",
      "communicator": "{{ user `communicator` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "{{ template_dir }}/Autounattend.xml",
        "{{ template_dir }}/scripts/base_setup.ps1"
      ],
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "qemuargs": [
        [
          "-m",
          "{{ user `memory` }}"
        ],
        [
          "-smp",
          "{{ user `cpus` }}"
        ],
        [
          "-drive",
          "file={{ template_dir }}/{{ user `virtio_file` }},media=cdrom,index=3"
        ],
        [
          "-drive",
          "file={{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}/{{ .Name }},if=virtio,cache=writeback,discard=ignore,format=qcow2,index=1"
        ]
      ],
      "shutdown_command": "{{ user `shutdown_command` }}",
      "shutdown_timeout": "{{ user `shutdown_timeout` }}",
      "vm_name": "{{ user `vm_name` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "{{ user `winrm_timeout` }}",
      "winrm_username": "{{ user `winrm_username` }}"
    },
    {
      "type": "virtualbox-iso",
      "communicator": "{{ user `communicator` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "{{ template_dir }}/Autounattend.xml",
        "{{ template_dir }}/scripts/base_setup.ps1"
      ],
      "guest_additions_mode": "attach",
      "guest_additions_path": "C:/Users/Vagrant/VBoxGuestAdditions.iso",
      "guest_additions_url": "{{ user `guest_additions_url` }}",
      "guest_os_type": "Windows10_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_interface": "sata",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "shutdown_timeout": "{{ user `shutdown_timeout` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--vram",
          "48"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--audio",
          "none"
        ]
      ],
      "vm_name": "{{ user `vm_name` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "{{ user `winrm_timeout` }}",
      "winrm_username": "{{ user `winrm_username` }}"
    },
    {
      "type": "vmware-iso",
      "communicator": "{{ user `communicator` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_adapter_type": "lsisas1068",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "{{ template_dir }}/Autounattend.xml",
        "{{ template_dir }}/scripts/base_setup.ps1"
      ],
      "guest_os_type": "windows9srv-64",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "shutdown_timeout": "{{ user `shutdown_timeout` }}",
      "tools_upload_flavor": "windows",
      "tools_upload_path": "C:/Windows/Temp/vmware.iso",
      "version": 11,
      "vm_name": "{{ user `vm_name` }}",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "{{ user `winrm_timeout` }}",
      "winrm_username": "{{ user `winrm_username` }}"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "{{ user `compression_level` }}",
        "keep_input_artifact": true,
        "output": "{{ user `build_directory` }}/{{ user `box_basename` }}.{{ .Provider }}.box",
        "vagrantfile_template": "{{ template_dir }}/Vagrantfile.template"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{ user `vagrantup_token` }}",
        "box_tag": "{{ user `vagrantup_user` }}/{{ user `box_basename` }}",
        "version_description": "{{ user `description` }} version {{ user `iso_version` }}",
        "version": "{{ user `iso_version` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "{{ template_dir }}/cookbooks"
      ],
      "guest_os_type": "windows",
      "run_list": [
        "packer::configure_power",
        "packer::disable_screensaver"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "{{ template_dir }}/cookbooks"
      ],
      "guest_os_type": "windows",
      "run_list": [
        "packer::vm_tools",
        "packer::features",
        "packer::enable_file_sharing",
        "packer::enable_remote_desktop",
        "packer::ui_tweaks"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "{{ template_dir }}/cookbooks"
      ],
      "guest_os_type": "windows",
      "run_list": [
        "packer::cleanup",
        "packer::defrag"
      ]
    },
    {
      "type": "powershell",
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "{{ template_dir }}/scripts/cleanup.ps1"
    }
  ]
}