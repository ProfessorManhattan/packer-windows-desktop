      "qemuargs": [
        ["-m", "{{ user `memory` }}"],
        ["-smp", "{{ user `cpus` }}"],
        [
          "-drive",
          "file={{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}/{{ .Name }},if=virtio,cache=writeback,discard=ignore,format=qcow2,index=1"
        ],
        ["-drive", "file={{ user `iso_url` }},media=cdrom,index=2"],
        ["-drive", "file={{ template_dir }}/{{ user `virtio_file` }},media=cdrom,index=3"]
      ],
