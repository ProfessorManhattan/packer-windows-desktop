{
  "variables": {
    "box_basename": "Base-Windows-Desktop",
    "build_directory": "output",
    "cpus": "2",
    "description_name": "Windows 10 Enterprise Desktop",
    "devtools": "false",
    "disk_size": "80000",
    "headless": "false",
    "iso_checksum": "d41d8cd98f00b204e9800998ecf8427e",
    "iso_url": "iso/19042.631.201119-0144.20h2_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "iso_version": "",
    "memory": "4096",
    "username": "vagrant",
    "username_password": "vagrant",
    "vram": "32",
    "winrm_timeout": "3h"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "floppy_files": [
        "Autounattend.xml",
        "scripts/first-boot.ps1",
        "scripts/winrm.ps1"
      ],
      "communicator": "winrm",
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_mode": "attach",
      "guest_os_type": "Windows10_64",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "post_shutdown_delay": "30s",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--vram",
          "{{ user `vram` }}"
        ]
      ],
      "winrm_password": "{{ env `username_password` }}",
      "winrm_timeout": "{{ env `winrm_timeout` }}",
      "winrm_username": "{{ env `username` }}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `build_directory` }}/{{ user `box_basename` }}.{{ .Provider }}_windows10.box",
      "vagrantfile_template": "windows10/vagrantfile.template"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "scripts/provision.ps1"
      ],
      "environment_vars": [
        "devtools={{ user `devtools` }}"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "10m"
    }
  ]
}
